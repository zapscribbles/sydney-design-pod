<div x-data="{ shown: false }" x-intersect="shown = true" class="flex flex-col lg:flex-row lg:my-20 lg:w-5/6 m-auto items-center gap-5 lg:gap-0">
    <div :class="shown ? 'opacity-100 -translate-x-2 lg:translate-x-8' : ''"  class="bg-myPink bg-opacity-80 rounded-3xl transform z-10 opacity-0 transition-all duration-1000 text-center lg:text-left">
        <div class="mx-5 my-10 lg:mx-10">
            <h1>
                <span class="block xl:inline" contenteditable>{{ motionTitle }}
                    {{ motionTitleHighlight }}</span>
                {# <span class="block xl:inline">{{ motionTitleHighlight }}</span> #}
            </h1>
            <div class="mt-3 max-w-md mx-auto text-lg text-myGrey" contenteditable>
                {{ motionBody }}
                {% if motionList %}
                    <ul class='mt-2 ml-10 text-left'>
                        {% for listItem in motionList %}
                            <li class='list-disc'>{{ listItem }}</li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>
            <div class="mt-10 flex justify-center">
                <a href="{{ motionButtonURL }}" class="btn hero-btn mint mr-4">{{ motionButtonLabel }}</a>
                {# <a href="" class="btn hero-btn mint alt-btn">Another Button</a> #}
            </div>
        </div>
    </div>
    <div :class="shown ? 'opacity-100 transform -translate-x-0 -translate-y-12 lg:-translate-x-4 lg:-translate-y-0' : ''" class="w-full h-full ml-4 lg:ml-0 object-cover opacity-0 transition-all duration-1000">
        <img class="rounded-2xl w-full max-h-64 lg:max-h-96 object-cover" src="{{ motionImage }}" alt="">
    </div>
</div>
