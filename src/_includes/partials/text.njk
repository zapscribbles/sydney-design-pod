<div class="w-full my-10 text-center m-auto">
    <div class="px-4">
        <h1>
            <span class="block xl:inline" contenteditable>{{ textTitle }}
                {{ textTitleHighlight }}</span>
            {# <span class="block text-myPink xl:inline">{{ textTitleHighlight }}</span> #}
        </h1>
        {% for paragraph in textBody %}
            <p class="mt-3 mx-auto text-md lg:text-lg text-myGrey" contenteditable>{{ paragraph }}</p>
        {% endfor %}
        <div class="mt-10 flex justify-center">
            <a href="{{ textButtonURL }}" class="btn hero-btn mint mr-4">{{ textButtonLabel }}</a>
            {% if textButtonAltURL != null %}
                <a href="{{ textButtonAltURL }}" class="btn hero-btn mint alt-btn">{{ textButtonAltLabel }}</a>
            {% endif %}
        </div>
    </div>
</div>
