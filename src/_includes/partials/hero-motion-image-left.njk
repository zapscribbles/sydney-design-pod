<div x-data="{ shown: false }" x-intersect="shown = true" class="flex my-20 w-5/6 m-auto items-center">
    <div :class="shown ? 'opacity-100 transform translate-x-8' : ''" class="w-full h-full object-cover opacity-0 transition-all duration-1000">
        <img class="rounded-2xl w-full" src="{{ motionImage }}" alt="">
    </div>
    <div :class="shown ? 'opacity-100 transform -translate-x-8' : ''" class="bg-white rounded-3xl mr-4 z-10 opacity-0 transition-all duration-1000">
        <div class="m-10">
            <h1>
                <span class="block xl:inline">{{ motionTitle }}</span>
                <span class="block text-myPink xl:inline">{{ motionTitleHighlight }}</span>
            </h1>
            <div class="mt-3 max-w-md mx-auto text-lg text-myGrey sm:text-xl md:mt-5 md:max-w-3xl">
                {{ motionBody }}
                {% if motionList %}
                    <ul class='mt-2 ml-10'>
                        {% for listItem in motionList %}
                            <li class='list-disc'>{{ listItem }}</li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>
            <div class="mt-10 flex justify-center">
                <a href="{{ motionButtonURL }}" class="btn hero-btn mint mr-4">{{ motionButtonLabel }}</a>
                {# <a href="" class="btn hero-btn mint alt-btn">Another Button</a> #}
            </div>
        </div>
    </div>
</div>
